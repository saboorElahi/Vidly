@model Vidly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>
        Genre:@Model.Genre   
    </li>
    
    @if (Model.ReleaseDate != null)
    {
        <li>
            Release Date: @Model.ReleaseDate
        </li>
    }
    
    <li>
        Date Added: @Model.DateAdded
    </li>
    
    <li>
        Number in Stock: @Model.NumberInStocks
    </li>
    
</ul>
